<h1>This is the list of all my tasks:</h1>

  <ul>
    <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" <%= "checked" if task.completed == true %> >
      <label><%= link_to task.title, task_path(task) %></label>
    </li>
    <% end %>
  </ul>

<p> <%= link_to "Create a new task", new_task_path %> </p>
